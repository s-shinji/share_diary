.registration
  = render "devise/shared/error_messages", resource: resource
  .registration__box
    .info
      %i 新規登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          = f.text_field :name, autofocus: true, placeholder: "名前"

        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール"

        .field
          - if @minimum_password_length
            %em
              (６文字以上の英数字)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)"
        .actions
          = f.submit "新規登録"
        .registration-link
          .login
            - if controller_name != 'sessions'
              = link_to "ログイン", new_session_path(resource_name)

