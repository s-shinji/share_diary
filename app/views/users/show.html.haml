.user-avatar
  -if @user.avatar.present? 
    = image_tag @user.avatar.url, class:"user-avatar"
  -else
    = image_tag "/assets/default.jpg", class:"user-avatar"
  -# = image_tag @tweet.user.avatar.url, class:"avatar"
  #follows_buttons
    = render 'relationships/follow_button', user: @user
    -# partial,localsは省略可能
.user-name
  = @user.name
.user-info
  -if @user.introduce?
    .user-info__introduce
      = simple_format(@user.introduce)
-# インスタグラムのURLや自己紹介など（ユーザー編集で作成できる）
.user-tweets
  - if @user.tweets
    .tweet-list
      .tweet-list__name
        tweet一覧
        %span +
      .tweet-list__item
        - @user.tweets.each do |tweet|
          = link_to topic_tweet_path(@topic,tweet.id),class: "tweet-title" do
            = tweet.title
.user-follower
  - if @user.followers
    .follower-list
      .follower-list__name
        follower一覧
        %span +
      .follower-list__item
        - @user.followers.each do |follower|
          = link_to user_path(follower.id),class:"follower-avatar" do
            -if follower.avatar.present? 
              = image_tag follower.avatar.url, class:"avatar"
            -else
              = image_tag "/assets/default.jpg", class:"avatar"
            = follower.name

